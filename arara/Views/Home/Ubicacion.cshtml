@model IEnumerable<arara.Models.locales>

@{
    ViewBag.Title = "Ubicacion";
    Layout = "~/Views/Shared/_Extranet.cshtml";
}
<div style="text-align: center; margin: 0 auto; width: 100%;background-color: rgba(255, 255,255, 0.8); border-radius: 4px;" >

    <div style="background-color: #BD5F5F; color: white; padding: 5px 0; margin-top: 5px; border: 1px solid yellow;">
        <h2>Ubicacion</h2>
        <h3>@ViewBag.Message</h3>
    </div>
    

    <table style="margin: 0 auto;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
            </tr>
        }

    </table>

</div>
